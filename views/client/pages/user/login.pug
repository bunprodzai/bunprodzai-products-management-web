extends ../../layouts/default
include ../../mixins/products-layout.pug
block main
  .container 
    .row.justify-content-center
      .col-4.mx-auto
        h2(class="text-center mt-5") Đăng nhập

        div(class="form-oder")
          form(
            action=`/user/login`
            method="POST"
          )
            div(class="form-group")
              label(for="email") Email
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
              )
            div(class="form-group")
              label(for="password") Password
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
              )
            div(class="form-group")
              button(class="btn btn-primary btn-block" type="submit") Đăng nhập
        a(href=`/user/password/forgot`) Quên mật khẩu?
        div Chưa có tài khoản? 
          a(href="/user/register") Đăng ký
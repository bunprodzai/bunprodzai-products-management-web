extends ../../layouts/default
include ../../mixins/products-layout.pug
block main
  .container 
    .row.justify-content-center
      .col-4.mx-auto
        h2(class="text-center mt-5") Lấy lại mật khẩu

        div(class="form-oder")
          form(
            action=`/user/password/forgot`
            method="POST"
          )
            div(class="form-group")
              label(for="email") Email
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
              )
            div(class="form-group")
              button(class="btn btn-primary btn-block" type="submit") Gửi mã xác nhận
      
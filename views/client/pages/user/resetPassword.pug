extends ../../layouts/default
include ../../mixins/products-layout.pug
block main
  .container 
    .row.justify-content-center
      .col-4.mx-auto
        h2(class="text-center mt-5") Đổi mật khẩu

        div(class="form-oder")
          form(
            action=`/user/password/reset-password`
            method="POST"
          )
            div(class="form-group")
              label(for="password") Nhập mật khẩu mới
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
              )
            div(class="form-group")
              label(for="comfirmPassword") Nhập lại mật khẩu mới
              input(
                type="password"
                class="form-control"
                id="comfirmPassword"
                name="comfirmPassword"
              )
            div(class="form-group")
              button(class="btn btn-primary btn-block" type="submit") Xác nhận

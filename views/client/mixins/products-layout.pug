mixin product-grid(products)
  .row 
    each item in products
      .col-3
        .product-item
          a(href=`/products/detail/${item.slug}`) 
            .inner-img
              img(src=item.thumbnail alt="")
              if(item.featured == "1")
                .inner-featured Nổi bật
            .inner-content
              h3.inner-title  #{item.title}
              .inner-price-new #{item.newPrice}$
              .inner-price-old 
                del #{item.price}$
              .inner-discount -#{item.discountPercentage}%
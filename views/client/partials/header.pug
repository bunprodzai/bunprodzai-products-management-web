include ../mixins/sub-menu.pug
header.header 
  .container  
    .row.align-items-center   
      .col-2
        .inner-logo 
          a(href="/")
            img(src=setting.logo alt="")
      .col-6
        form(action=`/search` method="GET")
          div(class="form-group d-flex mb-0")
            input(type="text" placeholder="Tìm kiếm" class="form-control" name="keyword" value=keyword)
            button(class="btn btn-primary ml-3" type="submit") Tìm
      .col-4
        .inner-menu
          ul  
            //- li  
            //-   a(href="/") Trang chủ
            //- li(class="sub-menu")
            //-   -const pathProduct = "/products"
            //-   a(href=pathProduct) Sản phẩm 
            //-   +sub-menu(layoutProductsCategory, pathProduct)
            li  
              a(href="/cart" class="cart-item") 
                i(class="bi bi-bag") 
                span(class="items-number") #{miniCarts ? miniCarts.totalQuantity : 0}
            if(user)  
              li  
                a(href="/user/info") #{user.fullName}
              li  
                a(href="/user/logout") 
                  i(class="bi bi-box-arrow-right" title="Đăng xuất")
            else
              li  
                a(href="/user/login" title="Đăng nhập")
                  i(class="bi bi-person")
            li  
              a(href="/chat") Chat

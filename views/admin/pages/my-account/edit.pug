extends ../../layouts/default.pug
block main 
  h1.mb-4 #{pageTitle}
    //- +alert-error(messages)
    //- +alert-success(messages)
  div(class="form-create-item")
    form(
      action=`${prefixAdmin}/my-account/edit?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="fullName") Họ tên
        input(
          type="text"
          class="form-control"
          id="fullName"
          name="fullName"
          value=myAccount.fullName
        )
      div(class="form-group")
        label(for="email") Email
        input(
          type="text"
          class="form-control"
          id="email"
          name="email"
          value=myAccount.email
        )
      div(class="form-group")
        label(for="password") Mật khẩu
        input(
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Nhập mật khẩu mới"
        )
      div(class="form-group")
        label(for="phone") Số điện thoại
        input(
          type="text"
          class="form-control"
          id="phone"
          name="phone"
          value=myAccount.phone
        )
      div(class="form-group" upload-img)  
        label(for="avatar ") Ảnh mô tả
        div(class="upload-img")
          input(
            type="file"
            class="form-control-file"
            id="avatar"
            name="avatar"
            accept="image-*"
            upload-img-input
            )
          button(class="btn btn-light" delete-img) Hủy ảnh
        img(src=myAccount.avatar alt="" upload-img-preview class="img-preview")
      div(class="form-group form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked= myAccount.status === 'active'
        )
        label(for="statusActive" class="form-check-label") Hoạt động
      div(class="form-group form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
          checked= myAccount.status === 'inactive'
        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động 
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-success"
        ) Cập nhập